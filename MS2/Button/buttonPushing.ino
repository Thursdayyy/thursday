static const char pi[] = ""; 
unsigned int digit = 0;
byte cnt=0;
void setup() {
  
  Serial.begin(9600);
  int i = 0;
  for(i = 2; i <= 11; i++)
  {
    pinMode(i, OUTPUT);
    digitalWrite(i, HIGH);
  }
 
   delay(5000);

   //press the Judge button (0)
   cnt = (pi[digit] - '0') + 2;
   digitalWrite(cnt, LOW);
   delay(100);
   digitalWrite(cnt, HIGH);
   delay(5000);
   
}

void loop() {
  
    //read digit
    cnt = (pi[digit++] - '0') + 2;

    //turn on for #ms
    digitalWrite(cnt, LOW);
    delay(150);
    
    //turn off for #ms
    digitalWrite(cnt, HIGH);
    delay(150);


}
